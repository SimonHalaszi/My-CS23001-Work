// string Test Program
//
// Tests: substring

#include <iostream> 
#include <cassert>
#include "string.hpp"

//===========================================================================
int main () {
    std::cout << "----------------------------------------------------" << std::endl; 
    {
        String bigString = "Hello I am a big big string";
        
        std::cout << "Making substrings from string: " << '"' << bigString << '"' << std::endl;

        String subStringOne = bigString.substr(0 , 5);
        String subStringTwo = bigString.substr(13, 16);
        String subStringThree = bigString.substr(21, bigString.length());

        assert(subStringOne == "Hello");
        assert(subStringTwo == "big");
        assert(subStringThree == "string");

        std::cout << "Substring(0, 5): " << '"' << subStringOne << '"' << std::endl;
        std::cout << "Substring(13, 16): " << '"' << subStringOne << '"' << std::endl;
        std::cout << "Substring(21, length()): " << '"' << subStringOne << '"' << std::endl;
    }

    std::cout << std::endl << "Done testing substring." << std::endl;
    std::cout << "----------------------------------------------------" << std::endl; 

}