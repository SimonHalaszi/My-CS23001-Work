// string Test Program
//
// Tests: Equality

#include <iostream> 
#include <cassert>
#include "string.hpp"

//===========================================================================
int main () {
    std::cout << "----------------------------------------------------" << std::endl;
    {
        //------------------------------------------------------
        // Setup fixture
        std::cout << "-     Test 1: " << std::endl;

        // Test 
        String stringA = 'A';
        String stringB;
        String stringC = String("Hello World!");

        // Verify
        assert(stringA == 'A');
        std::cout << "'A' == 'A'" << std::endl;

        assert(stringB == '\0');
        std::cout << "Empty String == Null Character" << std::endl;

        assert(stringC == "Hello World!");
        std::cout << "Hello World! == Hello World!" << std::endl;

        std::cout << "----------------------------------------------------" << std::endl;
    }

    std::cout << "Dont testing equality." << std::endl;
    std::cout << "----------------------------------------------------" << std::endl;

}